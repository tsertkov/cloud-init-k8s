#cloud-config
repo_update: true
repo_upgrade: true
packages:
  - docker
  - kubelet
  - kubectl
  - kubeadm
write_files:
  - path: /etc/yum.repos.d/kubernetes.repo
    content: |
      [kubernetes]
      name=Kubernetes
      baseurl=https://packages.cloud.google.com/yum/repos/kubernetes-el7-x86_64
      enabled=1
      gpgcheck=1
      repo_gpgcheck=1
      gpgkey=https://packages.cloud.google.com/yum/doc/yum-key.gpg https://packages.cloud.google.com/yum/doc/rpm-package-key.gpg
  - path: /etc/kubernetes/superuser.yaml
    content: |
      apiVersion: v1
      kind: ServiceAccount
      metadata:
        name: superuser
        namespace: kube-system
      ---
      apiVersion: rbac.authorization.k8s.io/v1beta1
      kind: ClusterRoleBinding
      metadata:
        name: superuser
      roleRef:
        apiGroup: rbac.authorization.k8s.io
        kind: ClusterRole
        name: cluster-admin
      subjects:
      - kind: ServiceAccount
        name: superuser
        namespace: kube-system
  - path: /etc/cni/net.d/10-cni.json
    content: |
      {
        "cniVersion": "0.2.0",
        "name": "kubenet",
        "type": "bridge",
        "bridge": "cni0",
        "isGateway": true,
        "ipMasq": true,
        "ipam": {
          "type": "host-local",
          "subnet": "10.22.0.0/16",
          "routes": [
            { "dst": "0.0.0.0/0" }
          ]
        }
      }
runcmd:
  - swapoff -a
  - sed -i '/\sswap\s/d' /etc/fstab
  - systemctl enable --now docker
  - systemctl enable --now kubelet
  - kubeadm init --skip-token-print --apiserver-advertise-address=$(ip -family inet addr show eth1 | sed -n 's/^\s\+inet \(\S\+\)\/.*/\1/p1')
  - kubectl --kubeconfig /etc/kubernetes/admin.conf taint nodes --all node-role.kubernetes.io/master-
  - kubectl --kubeconfig /etc/kubernetes/admin.conf apply -f /etc/kubernetes/superuser.yaml
  - kubectl --kubeconfig /etc/kubernetes/admin.conf apply -f https://raw.githubusercontent.com/kubernetes dashboard/master/src/deploy/recommended/kubernetes-dashboard.yaml

